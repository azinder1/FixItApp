$('#job_<%= @job.id  %>').text("")
$('#your_new_jobs').show()
$('#signed_up_jobs').append('<%= @job.title %> </li>')

<% if @job.job_status == 2 %>
  $('#job_pending_<%= @job.id  %>').text("")
  $('#active_jobs').append(' <%= j render "active" %>')
<% elsif @job.job_status == 3 %>
  $('#job_active_<%= @job.id  %>').text("")
  $('#completed_jobs').append(' <%= j render "complete" %>')
<% end %>
